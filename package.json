{
  "name": "react-autotip",
  "version": "0.1.0",
  "description": "A variety of simple auto-positioning tooltips",
  "main": "index.js",
  "module": "lib/index.js",
  "scripts": {
    "build": "webpack --config config/webpack.js",
    "build:prod": "NODE_ENV=production npm run build",
    "build:lib": "babel src --out-dir lib",
    "clean": "rm -rf index.* lib/",
    "dev": "NODE_ENV=dev webpack-dev-server --inline --hot --config config/webpack.js",
    "lint": "eslint src/**/*.js",
    "prepublish": "npm run build:lib",
    "test": "NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:coverage:report": "npm run test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "github.com/meinstein/react-autotip"
  },
  "keywords": [
    "react",
    "tooltip"
  ],
  "author": "Maximillian Einstein",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "babel-register": "^6.23.0",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.4",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^4.0.0",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-react": "^7.1.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "node-sass": "^4.5.3",
    "react-addons-test-utils": "^15.6.2",
    "react-hot-loader": "next",
    "react-test-renderer": "^16.0.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/config/plugins/enzymeAdapter.js",
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "testRegex": "(/src/.*test\\.js)$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/config/__mocks__/styleMock.js"
    },
    "modulePaths": [
      "<rootDir>/src"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-motion": "^0.5.2"
  }
}
